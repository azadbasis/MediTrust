<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <include android:id="@+id/include_profileAdmin"
        layout="@layout/profile_admin_section"
        android:visibility="gone"
        />
    <!--Doctor user section-->
    <include android:id="@+id/include_profileDoctor"
        layout="@layout/profile_doctor_section"
        android:visibility="visible"
        />
    <!--Patient user section-->
    <include android:id="@+id/include_profilePatient"
        layout="@layout/profile_patient_section"
        android:visibility="gone"
        />
    <!--Guest user section-->
    <include
        android:id="@+id/include_profileGuest"
        layout="@layout/profile_guest_section"
        android:visibility="gone"
        />
</androidx.constraintlayout.widget.ConstraintLayout>